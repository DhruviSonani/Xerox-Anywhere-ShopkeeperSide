        <Button

            android:id="@+id/btn_requests_approve"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:background="@drawable/accept"
            android:layout_alignParentRight="true"
            android:padding="2dp"

             />

        <Button

            android:id="@+id/btn_requests_reject"
            android:layout_width="40dp"
            android:background="@drawable/cancel"
            android:visibility="visible"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_requests_approve"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            />
        <Button

            android:layout_below="@+id/btn_requests_reject"
            android:id="@+id/btn_emergency"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:background="@drawable/emergency"
            android:layout_alignParentRight="true"
            android:padding="2dp" />

        <Button
            android:layout_below="@+id/btn_requests_reject"
            android:id="@+id/img_EmergencyPending"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:background="@drawable/emergency"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="2dp" />

        <ImageView
            android:padding="5dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/download"
            android:layout_below="@+id/img_EmergencyPending"
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_send"
            android:padding="5dp"
            android:layout_below="@+id/iv_download"
            android:layout_margin="7dp"
            android:visibility="gone"
            android:id="@+id/img_Xeroxsend"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/submit_button"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/done"
            android:padding="5dp"
            android:layout_below="@+id/iv_download"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:id="@+id/img_xeroxDone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
